---
import { Picture } from "@astrojs/image/components";
import photo from "../assets/photo.png";
---

<div class="mx-auto w-4/5 md:w-4/6 mb-8">
  <Picture
    src={photo}
    widths={[512, 768, 1024]}
    sizes="(min-width: 640px): 33vw, 75vw"
    aspectRatio="1:1"
    formats={["webp", "avif"]}
    alt="photo of the author looking at the viewer"
  />
</div>
