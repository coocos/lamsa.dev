---
import type { Repository } from "../apis/getRepositories";
export type Props = Repository;

const { name, url, description, createdAt, languages } = Astro.props;
---

<div class="p-4 rounded-xl bg-gray-50 drop-shadow-sm">
  <div class="flex mb-2 text-lg">
    <div>
      <a href={url} class="text-pink-600 hover:text-pink-500">
        {name}
      </a>
      <div>{description}</div>
    </div>
    <span class="ml-auto text-base text-gray-400"
      >{createdAt.getFullYear()}
    </span>
  </div>
  <ul class="flex gap-2">
    {
      languages.map((name) => (
        <li class="p-1 rounded-md mb-2 bg-gray-200 text-xs text-gray-600">
          {name}
        </li>
      ))
    }
  </ul>
</div>
